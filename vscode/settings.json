{
    "clangd.onConfigChanged": "restart",
    "[cpp]": {
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
    },
    "workbench.colorTheme": "Deepdark Material Theme | Full Black Version",
    // "editor.fontLigatures": false,
    "terminal.integrated.fontFamily": "Programming Font", "terminal.integrated.fontSize": 11,
    "editor.fontFamily": "Programming Font", "editor.fontSize": 11,
    "todo-tree.tree.showScanModeButton": false,
    "editor.lightbulb.enabled": true,
    "[c]": {
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
    },
    "diffEditor.ignoreTrimWhitespace": false,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "customizeUI.font.regular": "Programming Font",
    "customizeUI.font.monospace": "Programming Font",
    "customizeUI.fontSizeMap": {
        // "9px":          "11px",
        // "10px":         "11px",
        // "12px":         "11px",
        // "11px":         "11px",
        // "13px":         "11px",
        // "14px":         "11px",
        // "15px":         "11px",
        // "16px":         "11px",
        // "17px":         "11px",
        // "menu":         "11px",
        // "monospace":    "11px",
        // "tab-title":    "11px",
        // "window-title": "16px",
        "9px":          "11px",
        "10px":         "11px",
        "12px":         "11px",
        "11px":         "11px",
        "13px":         "11px",
        "14px":         "11px",
        "15px":         "11px",
        "16px":         "11px",
        "17px":         "11px",
        "menu":         "11px",
        "monospace":    "11px",
        "tab-title":    "11px",
        "window-title": "11px",
    },
    "customizeUI.stylesheet": {
        // ".settings-editor>.settings-body>.settings-tree-container .settings-group-level-1": "font-size: 16px;",
        // ".monaco-icon-label>.monaco-icon-label-container>.monaco-icon-description-container>.label-description": "font-size: 11px;",
        // ".extension-list-item>.details>.footer>.author": "font-size: 11px",
        // ".monaco-icon-label:after": "font-size: 16px; font-weight: unset;",
        // ".monaco-editor .codelens-decoration._ee1f61": "font-size: 11px !important",
        // "select": "font-size: 11px",
        // ".monaco-select-box-dropdown-container": "font-size: 11px",
        // ".settings-editor>.settings-body>.settings-tree-container .setting-item-contents .setting-item-category, .settings-editor>.settings-body>.settings-tree-container .setting-item-contents .setting-item-label": "font-weight: unset; font-size: 16px;",
        // ".monaco-workbench .part.editor>.content .welcomePage h2": "font-size: 16px;",
        // ".monaco-workbench .part.editor>.content .welcomePage .splash ul": "font-size: 11px",
        // ".monaco-workbench .part.editor>.content .welcomePage .commands .item button h3": "font-size: 11px",
        // ".monaco-workbench .part.editor>.content .welcomePage .commands .item button": "font-size: 11px",
        // ".monaco-editor .find-widget .monaco-findInput .input": "font-size: 11px",
        "*": "font-size: 11px !important; font-weight: 500 !important;",
        "*:before": "font-size: 11px !important; font-weight: 500 !important;",
        "*:after": "font-size: 11px !important; font-weight: 500 !important;",
        "#workbench\\.parts\\.activitybar ul.actions-container > li > a:before": "font-size: 24px !important;",
        "#workbench\\.parts\\.statusbar > .items-container > .statusbar-item > a[role=button] > .codicon:before": "font-size: 14px!important; font-weight: 400!important;",
        ".monaco-workbench .codicon[class*=codicon-]::before": "font-size: 16px!important; font-weight: 400!important;",
        "/* de-italicize autocomplete preview ghost text */ .monaco-editor .suggest-preview-text": "font-style: normal;",
        "/* de-italicize autocomplete preview ghost text */ .monaco-editor .ghost-text-decoration": "font-style: normal;",
    },
    "C_Cpp.intelliSenseEngine": "Disabled",
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true,
        // show .git, but just /info/exclude
        "**/.git": false,
        "**/.git/[^i]*":true,"**/.git/i[^n]*":true,"**/.git/in[^f]*":true,"**/.git/inf[^o]*":true,"**/.git/info/[^e]*":true,"**/.git/info/e[^x]*":true,"**/.git/info/ex[^c]*":true,"**/.git/info/exc[^l]*":true,"**/.git/info/excl[^u]*":true,"**/.git/info/exclu[^d]*":true,"**/.git/info/exclud[^e]*":true,
    },
    "explorer.compactFolders": false,
    "code-eol.highlightNonDefault": true,
    "editor.renderWhitespace": "all",
    "editor.rulers": [
        80,
        100
    ],
    // "python.analysis.typeCheckingMode": "basic",
    "editor.minimap.enabled": false,
    "svelte.enable-ts-plugin": true,
    "[python]": {
        "editor.formatOnType": true
    },
    "python.linting.mypyEnabled": true,
    // "python.analysis.typeCheckingMode": "off",
    "python.linting.lintOnSave": true,
    "python.linting.mypyArgs": [
        // vscode defaults
        // "--follow-imports=silent",
        // "--ignore-missing-imports",
        "--show-column-numbers",
        "--no-pretty",
        // type checking behavior
        "--check-untyped-defs",
        "--warn-unused-ignores",
        "--warn-return-any",
    //     // mypy behavior
    //     "--show-error-context",
    //     "--soft-error-limit=-1", // "default limit is 200" ... "If N is negative, there is no limit"
    ],
    "graphviz-interactive-preview.debouncingInterval": 250,
    // "␍", "¶", "¬", "␊"
    // "code-eol.newlineCharacter": "¬",
    // "code-eol.returnCharacter" : "¤",
    // "code-eol.crlfCharacter"   : "¤¬",
    "zoombar.zoomPreset": [
        144,  // fixedsys
        100,  // scientifica
        58,   // tom thumb
    ],
    "zoombar.preview": false,
    "window.zoomLevel": 0
}
